<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xecurity_App.View.ExtendKeyCardPage"
             Title="ExtendKeyCardPage">
    <VerticalStackLayout>
        <Label 
            Margin="0,20,0,0"
            Text="Edit NFC Key"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout Margin="20">
            <Label>
                Keycard Password
            </Label>
            <Label x:Name="labelPassword"
                   FontAttributes="Italic"/>
            <Label>
                
            </Label>
            <Label>
                Enable/Disable Card?
            </Label>
            <Switch x:Name="switchModule"/>
            <Label>
                Change Expiration Date?
            </Label>
            <DatePicker
                    x:Name="datepicker"
                    FontAttributes="Italic" HorizontalOptions="End"/>
            <Grid HeightRequest="420">

            </Grid>
            <Button Padding="20" Text="Update NFC Status" Clicked="Put_Button"></Button>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>