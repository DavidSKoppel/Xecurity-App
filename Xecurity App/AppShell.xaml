<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Xecurity_App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Xecurity_App.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        Title="Main page"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainPageMenu" />
    <ShellContent
        Title="Extend NFC-Chip Lease time"
        ContentTemplate="{DataTemplate local:ExtendLeasePage}"
        Route="ExtendLeasePage" />
</Shell>
